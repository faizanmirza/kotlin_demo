<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:context=".fragments.ScheduleListFragment">

    <TextView
        android:id="@+id/txtHrs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textColor="@color/textColorEvent"
        android:textStyle="bold"
        tools:text="10:00 HRS" />

    <LinearLayout
        android:id="@+id/relEvent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtHrs"
        android:background="@drawable/schedule_box_colored"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            tools:text="KeyNote - introduction" />

        <TextView
            android:id="@+id/textTimings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            tools:text="Mar 16, 2019 10:00 AM - 10:30 AM" />

    </LinearLayout>
</RelativeLayout>