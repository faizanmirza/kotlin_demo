<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="EditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#737373</item>
        <item name="android:textColorHint">#737373</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonOccputation" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/buttonColorGrey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ParagraphText" parent="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/paragraph_font_size</item>
    </style>

    <style name="Border">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/border_grey</item>
        <item name="android:layout_height">0.5dp</item>
    </style>


</resources>
